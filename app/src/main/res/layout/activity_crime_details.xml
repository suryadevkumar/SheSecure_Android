<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_600"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Crime Report Details"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Error Message -->
    <LinearLayout
        android:id="@+id/layoutError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeader"
        android:background="@color/red_100"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone">

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/red_500"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_700"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutError"
        android:orientation="horizontal">

        <!-- Left Side - Crime Details -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCrimeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_600"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvCrimeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_700"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvReportedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_500"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Evidence Photos -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Evidence Photos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    android:id="@+id/tvPhotosTitle" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCrimePhotos"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_200" />

        <!-- Right Side - Interactions -->
        <LinearLayout
            android:id="@+id/layoutInteractions"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <!-- Support/Unsupport Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnSupport"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circular_button_background"
                        android:drawableTop="@drawable/ic_thumb_up"
                        android:drawableTint="@color/white"
                        android:backgroundTint="@color/gray_400"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvSupportCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnUnsupport"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circular_button_background"
                        android:drawableTop="@drawable/ic_thumb_down"
                        android:drawableTint="@color/white"
                        android:backgroundTint="@color/gray_400"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvUnsupportCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unsupport"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600" />

                </LinearLayout>

            </LinearLayout>

            <!-- Comments Section -->
            <TextView
                android:id="@+id/tvCommentsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments (0)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="8dp"
                android:drawableTint="@color/gray_600"
                android:layout_marginBottom="16dp" />

            <!-- Comment Form -->
            <LinearLayout
                android:id="@+id/layoutCommentForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:hint="Add your comment..."
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:inputType="textMultiLine|textCapSentences" />

                <Button
                    android:id="@+id/btnPostComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Post"
                    android:backgroundTint="@color/blue_600"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:minWidth="80dp" />

            </LinearLayout>

            <!-- Comments List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical" />

            <!-- Empty Comments Message -->
            <TextView
                android:id="@+id/tvEmptyComments"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="No comments yet. Be the first to comment!"
                android:textColor="@color/gray_500"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>