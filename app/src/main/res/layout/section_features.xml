<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/features"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pink_50"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Key Features"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 1st Feature: Location Sharing -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="333dp"
                android:layout_height="228dp"
                android:layout_weight="1"
                android:contentDescription="Location Tracking"
                android:scaleType="fitCenter"
                android:src="@drawable/location_track" />

            <LinearLayout
                android:layout_width="333dp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/pink_50"
                    android:padding="8dp"
                    android:text="Stay Connected"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Location Sharing"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Share your real-time location with loved ones and decide who can track you and for how long. Whether you're commuting late at night or out for a run, this feature helps keep you safe and reassures those who care about you."
                    android:textColor="@color/gray_800"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 2nd Feature: SOS Alert -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="333dp"
                android:layout_height="228dp"
                android:layout_weight="1"
                android:contentDescription="SOS Alert"
                android:scaleType="fitCenter"
                android:src="@drawable/sos" />

            <LinearLayout
                android:layout_width="333dp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/pink_50"
                    android:padding="8dp"
                    android:text="Instant Emergency Alerts"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="SOS Alert"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Press the SOS button to instantly alert your emergency contacts and authorities with your location. the alert includes your current location and a distress message so that help can reach you as quickly as possible. Because every second matters."
                    android:textColor="@color/gray_800"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 3rd Feature: Nearby Hospitals -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="333dp"
                android:layout_height="228dp"
                android:layout_weight="1"
                android:contentDescription="Nearest Hospitals"
                android:scaleType="fitCenter"
                android:src="@drawable/hospital" />

            <LinearLayout
                android:layout_width="333dp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/pink_50"
                    android:padding="8dp"
                    android:text="Nearest Hospitals"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nearby Hospitals"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Access a list of nearby hospitals and emergency rooms within seconds. Whether it's for first aid or medical emergencies, this feature helps you find the fastest route to care. Powered by real-time location services and Google Maps integration."
                    android:textColor="@color/gray_800"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 4th Feature: Nearby Police Stations -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="333dp"
                android:layout_height="228dp"
                android:layout_weight="1"
                android:contentDescription="Nearest Police Stations"
                android:scaleType="fitCenter"
                android:src="@drawable/police" />

            <LinearLayout
                android:layout_width="333dp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/pink_50"
                    android:padding="8dp"
                    android:text="Nearest Police Stations"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nearby Police Stations"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="SheSecure helps you locate the nearest police station using real-time data and your location. You can get directions instantly and even call directly from the app. In emergencies, this feature ensures that legal help is never far away."
                    android:textColor="@color/gray_800"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 5th Feature: Counselor Guidance -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="333dp"
                android:layout_height="228dp"
                android:layout_weight="1"
                android:contentDescription="24/7 Guidance"
                android:scaleType="fitCenter"
                android:src="@drawable/guidance" />

            <LinearLayout
                android:layout_width="333dp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/pink_50"
                    android:padding="8dp"
                    android:text="24/7 Guidance"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Counselor Guidance"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Sometimes safety means emotional support too. SheSecure connects you with verified counselors and support professionals who are here to listen, guide, and help — whether you're dealing with anxiety, fear, or trauma. Your conversations are private, secure, and judgment-free."
                    android:textColor="@color/gray_800"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
