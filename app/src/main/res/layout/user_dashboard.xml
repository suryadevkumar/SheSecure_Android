<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activities.UserDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Nearest Crime Banner -->
        <androidx.cardview.widget.CardView
            android:id="@+id/nearest_crime_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/danger"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/nearest_crime_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/safety_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/nearest_crime_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="No Nearest Crime Found"/>

                    <TextView
                        android:id="@+id/nearest_crime_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button Grid above the map -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="8dp">

                <!-- Trusted Contacts Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/trustedContactsBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            android:src="@drawable/trusted_contact_icon"
                            app:tint="@color/purple"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="@color/purple_200"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trusted Contacts"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Emergency SOS Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/sosBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/emergencySOSIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            android:src="@drawable/sos_icon"
                            app:tint="@color/red_600"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="@color/red_50"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/emergencySOSText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency SOS"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Share Live Location Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/locationBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/liveLocationIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            android:src="@drawable/location_icon"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="@color/blue_100"
                            app:tint="@color/blue"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/liveLocationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share Live Location"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Helpline Number Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/helplineBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            android:src="@drawable/call_icon"
                            app:tint="@color/green"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="@color/green_100"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Helpline Number"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Your Location &amp; Safety"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/purple_600"
            android:textColor="@color/white"
            app:drawableLeftCompat="@drawable/location"
            app:drawableTint="@color/white" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <!-- Nearby Police Stations -->
        <androidx.cardview.widget.CardView
            android:id="@+id/police_stations_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Nearby Police Stations"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/blue"
                    android:textColor="@color/white"
                    app:drawableLeftCompat="@drawable/police_ic"
                    app:drawableTint="@color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/police_stations_list"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="8dp"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nearby Hospitals -->
        <androidx.cardview.widget.CardView
            android:id="@+id/hospitals_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Nearby Hospitals"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/green"
                    android:textColor="@color/white"
                    app:drawableLeftCompat="@drawable/health"
                    app:drawableTint="@color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hospitals_list"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_rounded"
            android:backgroundTint="@color/light_pink_bg"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safety Tips"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/pink_600"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_bg"
                    android:gravity="center"
                    android:text="1"
                    android:backgroundTint="@color/pink_100"
                    android:textColor="@color/pink_600"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share your live location with trusted contacts when traveling alone"
                    android:textColor="@color/pink_600"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_bg"
                    android:gravity="center"
                    android:text="2"
                    android:backgroundTint="@color/pink_100"
                    android:textColor="@color/pink_600"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use well-lit, populated routes at night"
                    android:textColor="@color/pink_600"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_bg"
                    android:gravity="center"
                    android:text="3"
                    android:backgroundTint="@color/pink_100"
                    android:textColor="@color/pink_600"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keep emergency numbers saved in your phone"
                    android:textColor="@color/pink_600"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>